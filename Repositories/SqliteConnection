using System.Data.SQLite;
using brokenaccesscontrol.Models;

namespace brokenaccesscontrol.Repositories;

public static class SqliteConnection
{
    public static SQLiteConnection sqliteConn;

    public static SQLiteConnection GetSQLiteConnection(){        
        if (sqliteConn == null){
            sqliteConn = new SQLiteConnection("Data Source=/home/zani0x03/Dev/brokenaccesscontrol/Database/brokenaccesscontrol.db;Version=3;New=True;Compress=True;");
            sqliteConn.Open();
        }
        return sqliteConn;
    } 

}
